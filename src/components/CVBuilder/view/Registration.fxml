<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.CVBuilder.view.RegistrationController">
   <center>
      <VBox alignment="CENTER" spacing="15.0" styleClass="form-container">
         <children>
            <Label styleClass="title-label" text="%registration.title">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="%registration.username" />
                  <TextField fx:id="usernameField" GridPane.columnIndex="1" />
                  <Label text="%registration.email" GridPane.rowIndex="1" />
                  <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="%registration.password" GridPane.rowIndex="2" />
                  <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="%registration.confirm" GridPane.rowIndex="3" />
                  <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label fx:id="errorLabel" styleClass="error-label" textFill="RED" GridPane.columnSpan="2" GridPane.rowIndex="4" />
               </children>
            </GridPane>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button defaultButton="true" onAction="#handleRegister" text="%button.register" />
                  <Button cancelButton="true" onAction="#handleCancel" text="%button.cancel" />
               </children>
            </HBox>
            <Hyperlink onAction="#handleLoginLink" text="%registration.login.link" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
