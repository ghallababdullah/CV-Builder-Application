<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.CVBuilder.view.DashboardController">
   <top>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="header">
         <children>
            <Label fx:id="welcomeLabel" styleClass="welcome-label" HBox.hgrow="ALWAYS" />
            <Button onAction="#switchLanguage" text="%app.language" />
            <Button onAction="#handleLogout" text="%button.logout" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" spacing="15.0">
         <children>
            <Label styleClass="title-label" text="%dashboard.title">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="cvListContainer" spacing="10.0" styleClass="cv-list">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <Label fx:id="emptyLabel" text="%dashboard.empty" visible="false" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button defaultButton="true" onAction="#handleCreateCV" text="%button.create" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
